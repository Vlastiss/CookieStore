<nav class="bg-gradient-to-r from-amber-600 to-orange-600 shadow-lg">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo/Brand -->
      <div class="flex-shrink-0">
        <%= link_to root_path, class: "flex items-center space-x-2 text-white hover:text-amber-100 transition-colors" do %>
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z"/>
          </svg>
          <span class="text-2xl font-bold">CookieStore</span>
        <% end %>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <%= link_to "Browse Cookies", cookies_path, class: "text-white hover:text-amber-100 font-medium transition-colors duration-200" %>
        <%= link_to "New Order", new_order_path, class: "text-white hover:text-amber-100 font-medium transition-colors duration-200" %>
        
        <!-- CTA Button -->
        <%= link_to new_order_path, class: "bg-white text-orange-600 px-6 py-2 rounded-full font-semibold hover:bg-amber-50 hover:scale-105 transition-all duration-200 shadow-md" do %>
          <span class="flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            <span>Order Now</span>
          </span>
        <% end %>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button type="button" class="text-white hover:text-amber-100 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-orange-600 rounded-md p-2" id="mobile-menu-button">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div class="hidden md:hidden pb-4" id="mobile-menu">
      <div class="flex flex-col space-y-3">
        <%= link_to "Browse Cookies", cookies_path, class: "text-white hover:text-amber-100 font-medium transition-colors duration-200 py-2" %>
        <%= link_to "New Order", new_order_path, class: "text-white hover:text-amber-100 font-medium transition-colors duration-200 py-2" %>
        <%= link_to new_order_path, class: "bg-white text-orange-600 px-6 py-2 rounded-full font-semibold hover:bg-amber-50 transition-colors duration-200 text-center shadow-md" do %>
          Order Now
        <% end %>
      </div>
    </div>
  </div>
</nav>

<script>
  // Simple mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>

